{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "lib": [
      "ES6"
    ],
    "types": [
      "@types/mocha",
      "@types/chai",
      "@types/node"
    ]
  },
  "files": [
    "./src/main/index.ts",
    "./src/main/bin/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
